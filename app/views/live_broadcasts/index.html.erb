<%- content_for :head do %>
  <%= stylesheet_link_tag "gtpo" %>
<% end %>

<div class="content W730">
<!-- Nav tabs -->
  <%=render 'nav'%>
  <!-- Tab panes -->
  <div class="tab-content">
    <!-- list1 -->
    <div class="tab-pane active" id="voc_list">
    <!-- table -->
      <table class="table table-bordered table-striped " id="table1">
        <tr class="info" id="tr1" >
          <td >标题</td>
          <td>课程时间</td>
          <td>状态</td>
          <td>操作</td>
        </tr>
        <% @live_broadcasts.each do |live_broadcast| %>
          <tr id="tr2">
            <td><%=live_broadcast.title%></td>

            <td>
              <%=live_broadcast.start_at.strftime('%Y-%m-%d %H:%M') if live_broadcast.start_at %> -
              <%=live_broadcast.end_at.strftime('%Y-%m-%d %H:%M') if live_broadcast.end_at %>
            </td>

            <td><%=live_broadcast.status_name%></td>

            <td>
              <a href="<%=edit_live_broadcast_path(live_broadcast)%>">编辑</a>
              <%= link_to '删除', live_broadcast_path(live_broadcast), data: { confirm: '确定删除?' }, :method => :delete %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
<!-- page -->
</div>