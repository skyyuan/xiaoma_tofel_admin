<%= form_for @jijing_quesion, html:{class: 'form-horizontal'} do |f| %>
  <div class="form-group">
     <label for="inputtext1" class="col-sm-2 control-label">题号选择：</label>
     <div class="col-sm-10">
      <%= f.select :sequence_number, (1..30).collect {|i| [ i, i ]}, class: "form-control se5 weike-select"%>
     </div>
  </div>
  <div class="form-group">
     <label for="inputtext1" class="col-sm-2 control-label">口语题目：</label>
     <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" -%>
     </div>
  </div>
  <div class="form-group">
     <label for="inputtext1" class="col-sm-2 control-label">范例：</label>
     <div class="col-sm-10">
         <input type="text" class="form-control" name="sample_name" id="inputtext1" placeholder="输入音频地址" value="<%=@jijing_quesion.jijing_sample.content if @jijing_quesion.jijing_sample%>">
     </div>
  </div>
  <div class="form-group">
     <label for="inputtext2" class="col-sm-2 control-label">名师讲解：</label>
     <div class="col-sm-10">
      <%= f.text_field :analysis, class: "form-control" -%>
     </div>
  </div>
  <button type="submit" class="btn btn-default b1" id="btn_sub">提交</button>
<% end %>