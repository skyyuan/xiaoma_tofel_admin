          <%= select_tag :unit, options_for_select(DictationGroup.short_name_for_selection), :class => 'form-control se2' %><br>
          <button type="submit" class="btn btn-default b1">确定</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
