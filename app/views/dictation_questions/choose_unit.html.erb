<%= content_for :head do %>
  <%= stylesheet_link_tag "gread" %>
<% end %>

<!-- right content -->
<div class="content W730">
  <!-- Nav tabs -->
  <%= render 'top_nav' %>

  <div class="tab-content">
    <div class="tab-pane1" id="voc_entry">
      <p class="unit">请选择要录入的听写单元：&nbsp;&nbsp;&nbsp;unit</p>
      <%= form_tag new_dictation_question_path, method: :get, class: "navbar-form navbar-left", role: "search" do %>
