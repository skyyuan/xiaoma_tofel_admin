<div class="form-shade _tpo_question_content" style="height:720px"  >
  <div class="form-group group2" >
    <div class="form-group group2" >
      <div class="">
        <label class="question-index">
          第<label class="_question_content_num"><%= num %></label>题：
          <a class="delete-1-2">删除</a>
        </label>
        <%= select_tag :"tpo_question[#{num}][question_type]", options_for_select(TpoQuestion::READ_QUESTION_TYPE.invert.to_a, selected: '3'), id: 'se_unit', :class => 'form-control se6 _change_question_type' %>
      </div>
    </div>
    <label for="inputtext1" class="col-sm-2 control-label">题目：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][prompt]", nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group group2 _choice" >
    <label for="inputtext1" class="col-sm-2 control-label">选项A：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceA]", nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group group2 _choice" >
    <label for="inputtext1" class="col-sm-2 control-label">选项B：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceB]", nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group group2 _choice" >
    <label for="inputtext1" class="col-sm-2 control-label">选项C：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceC]", nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group group2 _choice" >
    <label for="inputtext1" class="col-sm-2 control-label">选项D：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceD]", nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group group2 _question_choice_templete _choice" >
    <label for="inputtext1" class="col-sm-2 control-label">选项E：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceE]", nil, id: '', class: 'form-control' %>
    </div>
    <a href="javascript:void(0);" class="delete-2 _delete_tpo_question_choice">删除</a>
  </div>

  <!--choice tempelte begin -->
  <div class="form-group group2 _question_choice_templete _choice" style="display:none;">
    <label for="inputtext1" class="col-sm-2 control-label _question_num">选项E：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][option][choiceE]", nil, id: '', class: 'form-control  question-answer' %>
    </div>
    <a href="javascript:void(0);" class="delete-2 _delete_tpo_question_choice">删除</a>
  </div>
  <!--choice tempelte end -->

  <p class="para _add_tpo_question_choice"><img src="<%= asset_path 'i3.png'%>">添加选项</p>

  <div class="form-group group2 _checkbox_answer" >
    <%= text_field_tag :"tpo_question[#{num}][G1]", nil, class: 'form-control', placeholder: '问题描述', style: 'width:90px;margin-left:80px;' %>
    <div class="checklist-1">
      <% TpoQuestion::READ_QUESTION_MULTIPLE_CHOICE.each do |key, value| %>
        <label class="checkbox-inline _checkbox_content">
          <%= check_box_tag "tpo_question[#{num}][answer1][]", value, nil, id: nil %><%= key %>
        </label>
      <% end %>

      <!--choice answer tempelte begin -->
      <label class="checkbox-inline _checkbox_answer_templete _checkbox_content" style="display:none;">
        <%= check_box_tag "tpo_question[#{num}][answer1][]", 'choiceA', nil, id: nil %><label class="_answer_text">A</label>
      </label>
      <!--choice answer tempelte end -->
    </div>
  </div>

  <div class=" form-group group2 _checkbox_answer" >
    <%= text_field_tag :"tpo_question[#{num}][G2]", nil, class: 'form-control', placeholder: '问题描述', style: 'width:90px;margin-left:80px;' %>
    <div class="checklist-1">
      <% TpoQuestion::READ_QUESTION_MULTIPLE_CHOICE.each do |key, value| %>
        <label class="checkbox-inline _checkbox_content">
          <%= check_box_tag "tpo_question[#{num}][answer2][]", value, nil, id: nil %><%= key %>
        </label>
      <% end %>

      <!--choice answer tempelte begin -->
      <label class="checkbox-inline _checkbox_answer_templete _checkbox_content" style="display:none;">
        <%= check_box_tag "tpo_question[#{num}][answer2][]", 'choiceA', nil, id: nil %><label class="_answer_text">A</label>
      </label>
      <!--choice answer tempelte end -->
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">解析：</label>
    <div class="col-sm-10">
      <%= text_area_tag :"tpo_question[#{num}][analysis]", nil, class: 'form-control', rows: '4' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">名师讲解：</label>
    <div class="col-sm-10">
      <%= text_field_tag :"tpo_question[#{num}][audio]", nil, class: 'form-control question-answer', placeholder: '输入视频地址' %>
    </div>
  </div>

</div>
