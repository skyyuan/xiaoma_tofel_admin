<div class="form-shade _tpo_question_content" style="min-height:560px;height:auto !important;" >
  <div class="form-group group2" >
    <div class="form-group group2" >
      <div >
        <label class="question-index">
          第<label class="_question_content_num"><%= num %></label>题：
          <% if num.to_i > 1 %>
            <a class="delete-1-2 _delete_tpo_question_content">删除</a>
          <% end %>
        </label>
        <%= select_tag :"tpo_question[#{num}][question_type]", options_for_select(TpoQuestion::READ_QUESTION_TYPE.invert.to_a), id: 'se_unit', :class => 'form-control se6 _change_question_type' %>
      </div>
    </div>
    <label for="inputtext1" class="col-sm-2 control-label">题目：</label>
    <div class="col-sm-10">
      <%
        question_num = num.to_s
        @tpo_question_content ||= (tpo_question_content ||= nil)
        @from ||= (change_type ||= nil)
        question = @from == 'edit' ? @tpo_question_content[:tpo_question][question_num] : nil
        prompt_value = @from == 'edit' ? question[:prompt] : nil
      %>
      <%= text_field_tag :"tpo_question[#{num}][prompt]", prompt_value, class: 'form-control question-answer' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">选项A：</label>
    <div class="col-sm-10">
      <% choiceA_value = @from == 'edit' ? question[:option]['choiceA'] : nil %>
      <%= text_field_tag :"tpo_question[#{num}][option][choiceA]", choiceA_value, class: 'form-control question-answer' %>
    </div>
  </div>
  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">选项B：</label>
    <div class="col-sm-10">
      <% choiceB_value = @from == 'edit' ? question[:option]['choiceB'] : nil %>
      <%= text_field_tag :"tpo_question[#{num}][option][choiceB]", choiceB_value, class: 'form-control question-answer' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">选项C：</label>
    <div class="col-sm-10">
      <% choiceC_value = @from == 'edit' ? question[:option]['choiceC'] : nil %>
      <%= text_field_tag :"tpo_question[#{num}][option][choiceC]", choiceC_value, class: 'form-control question-answer' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">选项D：</label>
    <div class="col-sm-10">
      <% choiceD_value = @from == 'edit' ? question[:option]['choiceD'] : nil %>
      <%= text_field_tag :"tpo_question[#{num}][option][choiceD]", choiceD_value, class: 'form-control question-answer' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">正确选项：</label>
    <div class="col-sm-10">
      <% answer_value = @from == 'edit' ? question[:answer] : nil %>
      <%= select_tag :"tpo_question[#{num}][answer]", options_for_select(TpoQuestion::READ_QUESTION_SIMPLE_CHOICE.to_a, selected: answer_value), id: 'se_unit', :class => 'form-control se5 _unit' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">解析：</label>
    <div class="col-sm-10">
      <% analysis_value = @from == 'edit' ? question[:analysis] : nil %>
      <%= text_area_tag :"tpo_question[#{num}][analysis]", analysis_value, class: 'form-control', rows: '4' %>
    </div>
  </div>

  <div class="form-group group2" >
    <label for="inputtext1" class="col-sm-2 control-label">名师讲解：</label>
    <div class="col-sm-10">
      <% audio_value = @from == 'edit' ? question[:audio] : nil %>
      <%= text_field_tag :"tpo_question[#{num}][audio]", audio_value, class: 'form-control question-answer', placeholder: '输入视频地址' %>
    </div>
  </div>

</div>
