<%- content_for :head do %>
  <%= stylesheet_link_tag "g9" %>
<% end %>
 <div class="content W730">
    <div class="tab-pane" id="voc_entry">
      <nav class="navbar navbar-default" role="navigation" id="navbar">
        <p><span class="task"><%=params[:type_name]%></span><span>第<%=params[:number]%>题</span><span><a href="<%=new_type_jijing_works_path(group_id: params[:group_id])%>">更改</a></span></p>

      </nav>
      <%=form_tag jijing_works_path, class: 'form-horizontal' do %>
        <p style="font-weight:bold;padding-left:20px;">Question:</p>
        <div class="form-group">
          <label for="inputtext1" class="col-sm-2 control-label">口语题目：</label>
          <div class="col-sm-10">
            <textarea class="form-control" rows="3" name="content"></textarea>
          </div>
        </div>
        <div class="form-group">
           <label for="inputtext1" class="col-sm-2 control-label">解析：</label>
           <div class="col-sm-10">
            <textarea class="form-control" rows="3" name="resolution"></textarea>
           </div>
        </div>
        <% if params[:type_name] == "独立写作"%>
          <div class="form-group speaking" id="speaking-form">
            <label for="inputtext1" class="col-sm-2 control-label">答案范例：</label>
            <div class="col-sm-10">
              <select class="form-control se1" name="standpoint[]" style="margin-top: 4px;margin-left: -2px;">
                <option value="同意">同意</option>
                <option value="反对">反对</option>
                <option value="中立">中立</option>
              </select>
            </div>
            <div class="col-sm-10">
              <textarea class="form-control sample" rows="3" name="sample[]" style="margin-top: 10px;margin-left: 121px;"></textarea>
            </div>
          </div>
          <p  id="new_gra"><img src="<%=asset_path 'i3.png'%>">新语法点</p>
        <% else %>
          <div class="form-group">
            <label for="inputtext1" class="col-sm-2 control-label" >答案范例：</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="3" name="sample"></textarea>
            </div>
          </div>
        <% end %>
        <input type="hidden" name="type_name" value="<%=params[:type_name]%>">
        <input type="hidden" name="number" value="<%=params[:number]%>">
        <input type="hidden" name="group_id" value="<%=params[:group_id]%>">
        <button type="submit" class="btn btn-default b1" id="btn_sub">提交</button>
      <% end %>
    </div>
  </div>
</div>
<% content_for :tail do %>
  <script>
     $(function(){

      $("#new_gra").bind("click",function(){
        html = '<div class="form-group speaking" id="speaking-form">' +
               '<label for="inputtext1" class="col-sm-2 control-label">答案范例：</label>' +
               '<div class="col-sm-10">' +
               '<select class="form-control se1" name="standpoint[]" style="margin-top: 4px;margin-left: -2px;">' +
               '<option value="同意">同意</option>' +
               '<option value="反对">反对</option>' +
               '<option value="中立">中立</option>' +
               '</select>' +
               '</div>' +
               '<div class="col-sm-10">' +
               '<textarea class="form-control" name="sample[]"  rows="3" style="margin-top: 10px;margin-left: 121px;"></textarea>' +
               '</div>' +
               '</div>';
        $(".speaking:last").after(html);

      })
    })
  </script>
<% end %>