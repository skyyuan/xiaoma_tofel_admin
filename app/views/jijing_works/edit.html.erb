<%- content_for :head do %>
  <%= stylesheet_link_tag "g9" %>
<% end %>
 <div class="content W730">
    <%= render "nav" %>
    <p style="color:red;"><%=flash[:notice] %></p>
    <div class="tab-pane" id="voc_entry">
      <%= form_for @jijing_question, html:{class: 'form-horizontal'} do |f| %>
        <div class="form-group">
           <label for="inputtext1" class="col-sm-2 control-label">题号选择：</label>
           <div class="col-sm-10">
            <%= f.select :sequence_number, (1..30).collect {|i| [ i, i ]}, class: "form-control se5 weike-select"%>
           </div>
        </div>
        <div class="form-group">
           <label for="inputtext1" class="col-sm-2 control-label">写作题目：</label>
           <div class="col-sm-10">
            <%= f.text_area :content, class: "form-control" -%>
           </div>
        </div>
        <div class="form-group">
           <label for="inputtext1" class="col-sm-2 control-label">答案范例：</label>
           <div class="col-sm-10">
           <textarea class="form-control" rows="3" name="sample_name"><%=@jijing_question.jijing_sample.content if @jijing_question.jijing_sample%></textarea>
           </div>
        </div>
        <div class="form-group">
           <label for="inputtext2" class="col-sm-2 control-label">名师讲解：</label>
           <div class="col-sm-10">
            <%= f.text_field :analysis, class: "form-control" -%>
           </div>
        </div>
        <button type="submit" class="btn btn-default b1" id="btn_sub">提交</button>
      <% end %>
    </div>
  </div>
</div>
<% content_for :tail do %>
<% end %>