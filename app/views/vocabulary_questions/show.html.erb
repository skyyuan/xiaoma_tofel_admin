<%= content_for :head do %>
  <%= stylesheet_link_tag "gtpo" %>
<% end %>

<div class="content W730">
  <!-- Nav tabs -->
  <%= render 'nav' %>

  <div class="tab-content">
    <div class="" id="voc_entry">
      <form class="form-horizontal " role="form" action="" id="form6">
        </div>
          <div>
            <p >Questions</p>
            <hr style="width: 610px;margin-right: 30px;float: right;margin-top: -29px;">
            <div class="radio-list" style=" margin-left: 53px;margin-top: -9px;">

              <label>
                <p>单词：<%=@question_content[:prompt] %></p>
                <p>词性：<%=@question_content[:speech] %></p>
              </label>

              <div class="radio">
                <label>
                  选项：
                  <% @question_content[:simple_choice_value].each_with_index do |choice,index| %>
                    <p><%=@question_content[:simple_choice_identifier][index]%>：<%= choice %></p>
                  <% end %>
                </label>
              </div>
            </div>

            <div class="form-shade" style="height:120px" >
              <div class="form-group " id="group1">
                <label for="inputtext1" class="col-sm-2 control-label" >
                  正确答案：
                  <br><br>
                  <%=@question_content[:answer] %>
                </label>
              </div>
            </div>
          </div>

        <div class="tab-pane active" id="voc_entry">
            <%= link_to '修改', edit_vocabulary_question_path(@question), id: 'btn3', class: 'btn btn-primary btn-lg active', style: 'margin-left:80px;' %>

            <%= link_to '返回首页', vocabulary_questions_path, id: 'btn3', class: 'btn btn-primary btn-lg active' %>
       </div>
      </form>
    </div>
  </div>
</div>
